.container {
  width: 100%;
  min-height: 100vh;
  background: #2C3A4A;
  padding: 0;
  padding-bottom: 160rpx; /* Space for bottom nav */
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  background: #2C3A4A;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* Date Selector */
.date-selector {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.arrow-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1); /* Circle background for arrows */
}

.arrow-btn.left {
  transform: rotate(0deg);
}

.arrow-btn.right {
  transform: rotate(180deg);
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

.current-date {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #FFFFFF;
  margin: 0 40rpx;
  top: 40rpx;
  cursor: pointer;
  user-select: none;
}

.current-date:active {
  opacity: 0.7;
}

.triangle-down {
  font-size: 20rpx;
  margin-left: 12rpx;
  color: #FFFFFF;
}

/* Record List */
.record-list {
  flex: 1;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* Loading State Placeholder */
.loading-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  min-height: 400rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #8E8E93;
  text-align: center;
}

/* Empty State Placeholder */
.empty-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  min-height: 400rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #8E8E93;
  text-align: center;
}

.record-card {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.duration-group {
  display: flex;
  align-items: baseline;
}

.duration-val {
  font-size: 40rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.duration-unit {
  font-size: 32rpx;
  color: #FFFFFF;
  margin-left: 8rpx;
}

.record-date {
  font-size: 30rpx;
  color: #B0B0B0;
}

.card-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-extra {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 30rpx;
  color: #B0B0B0;
  margin-bottom: 16rpx;
}

.stat-val {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* Calendar Modal */
.calendar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.calendar-modal-content {
  background-color: #2C3A4A;
  border-radius: 32rpx;
  padding: 32rpx;
  width: 100%;
  max-width: 800rpx;
  max-height: calc(100vh - 64rpx);
  box-sizing: border-box;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

/* Calendar Month Header */
.calendar-month-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
  flex-shrink: 0;
}

.calendar-month-nav-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.05);
}

.calendar-nav-arrow {
  font-size: 48rpx;
  color: #FFA500;
  font-weight: bold;
  line-height: 1;
}

.calendar-month-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* Calendar Weekday Headers */
.calendar-weekday-headers {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 16rpx;
  gap: 8rpx;
  flex-shrink: 0;
}

.calendar-weekday-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12rpx 0;
}

.calendar-weekday-text {
  font-size: 32rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* Calendar Grid */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 6rpx;
  flex-shrink: 0;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.05);
  position: relative;
  min-height: 64rpx;
  max-height: 88rpx;
  border: 4rpx solid transparent;
  transition: all 0.2s ease;
}

.calendar-day.other-month {
  opacity: 0.3;
}

.calendar-day.today {
  background-color: rgba(82, 196, 26, 0.15);
}

.calendar-day.selected {
  border: 4rpx solid #52C41A;
  background-color: rgba(82, 196, 26, 0.3);
}

.calendar-day.selected.today {
  border: 4rpx solid #52C41A;
  background-color: rgba(82, 196, 26, 0.4);
}

.calendar-day-number {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.calendar-day-dot {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
}
